        <button id="take-photo">Ambil Foto</button>
        <canvas id="canvas"></canvas>
    </div>
    <div id="sticker-container">
        <h3>Pilih Stiker:</h3>
        <img src="sticker1.png" class="sticker" data-sticker="sticker1.png">
