body {
    font-family: Arial, sans-serif;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0;
    padding: 0;
}

#camera-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 400px;
}

#video, #canvas {
    width: 100%;
    height: auto;
    max-width: 400px;
    border: 2px solid #ddd;
}

#sticker-container {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 10px;
}

.sticker {
    width: 50px;
    height: 50px;
    cursor: pointer;
}
const video = document.getElementById('video');
const canvas = document.getElementById('canvas');
const context = canvas.getContext('2d');
const takePhotoButton = document.getElementById('take-photo');

// Akses kamera di perangkat mobile
navigator.mediaDevices.getUserMedia({ video: { facingMode: 'environment' } }) // 'facingMode' untuk kamera belakang
    .then((stream) => {
        video.srcObject = stream;
    })
    .catch((err) => {
        alert("Gagal mengakses kamera: " + err);
    });

takePhotoButton.addEventListener('click', () => {
    canvas.width = video.videoWidth;
    canvas.height = video.videoHeight;
    context.drawImage(video, 0, 0, canvas.width, canvas.height);
    canvas.style.display = 'block';
});
const stickers = document.querySelectorAll('.sticker');

stickers.forEach(sticker => {
    sticker.addEventListener('click', () => {
        const img = new Image();
        img.src = sticker.getAttribute('data-sticker');
        img.onload = () => {
            // Atur posisi stiker di canvas, disesuaikan dengan ukuran layar
            context.drawImage(img, 50, 50, 100, 100);
        };
    });
});	
